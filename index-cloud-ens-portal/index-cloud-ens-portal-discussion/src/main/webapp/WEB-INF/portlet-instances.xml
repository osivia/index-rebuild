<?xml version="1.0" standalone="yes"?>
<!DOCTYPE deployments PUBLIC "-//JBoss Portal//DTD Portlet Instances 2.6//EN" "http://www.jboss.org/portlet/dtd/portlet-instances_2_6.dtd">

<deployments>
    <deployment>
        <if-exists>overwrite</if-exists>
        <instance>
            <display-name xml:lang="en">Index - discussion</display-name>
            <display-name xml:lang="fr">Index - discussion</display-name>
            <instance-id>index-cloud-ens-discussion-instance</instance-id>
            <portlet-ref>index-cloud-ens-discussion</portlet-ref>
            <security-constraint>
                <policy-permission>
                    <action-name>view</action-name>
                    <unchecked />
                </policy-permission>
            </security-constraint>
        </instance>
    </deployment>
    <deployment>
        <if-exists>overwrite</if-exists>
        <instance>
            <display-name xml:lang="en">Index - discussion - unread messages</display-name>
            <display-name xml:lang="fr">Index - discussion - messages non lus</display-name>
            <instance-id>index-cloud-ens-discussion-unread-instance</instance-id>
            <portlet-ref>index-cloud-ens-discussion-unread</portlet-ref>
            <security-constraint>
                <policy-permission>
                    <action-name>view</action-name>
                    <unchecked />
                </policy-permission>
            </security-constraint>
        </instance>
    </deployment>    
</deployments>
